meta {
  name: Create
  type: http
  seq: 1
}

post {
  url: {{BASE_URL}}/products/
  body: json
  auth: bearer
}

auth:bearer {
  token: {{access_token_set_by_collection_script}}
}

body:json {
  {
    "id": "{{productId}}",
    "name": "Figurine LOL",
    "purchasePrice": 700,
    "sellingPrice": 2000,
    "stock": 10,
    "productFamilyId": "FIG" 
  }
}

script:post-response {
  if(res.body.id) {
    bru.setVar('productId', res.body.id)
  }
}
